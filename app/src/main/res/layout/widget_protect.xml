<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/protect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置密码"
        android:textStyle="bold"
        android:textSize="@dimen/basic22sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="@dimen/basic8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/basic12dp"
        />

    <LinearLayout
        android:id="@+id/ll_dot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/basic5dp"
            android:src="@drawable/page_indicator_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/basic5dp"
            android:src="@drawable/page_indicator_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/basic5dp"
            android:src="@drawable/page_indicator_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/basic5dp"
            android:src="@drawable/page_indicator_bg" />
    </LinearLayout>

    <GridView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic20dp"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:gravity="center"
        android:horizontalSpacing="@dimen/basic5dp"
        android:listSelector="@null"
        android:numColumns="3"
        android:padding="@dimen/basic7dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/basic5dp" />

</LinearLayout>